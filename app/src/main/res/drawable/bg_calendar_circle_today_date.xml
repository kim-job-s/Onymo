<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 내부 채우기 색상 -->
    <solid android:color="@color/color_primary" /> <!-- 기본 색상 (파란색) -->

    <!-- 둥근 테두리 -->
    <corners android:radius="50dp" /> <!-- 완전한 원형을 만들기 위해 radius를 50%로 설정 -->

    <!-- 외곽선 (테두리) -->
    <stroke
        android:width="2dp"
        android:color="@color/color_primary_dark" /> <!-- 강조된 외곽선 -->
</shape>

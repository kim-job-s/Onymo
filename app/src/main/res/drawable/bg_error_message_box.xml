<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- 에러 메시지 배경과 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 배경색 -->
            <solid android:color="@color/color_error_background" />

            <!-- 둥근 모서리 -->
            <corners android:radius="12dp" />

            <!-- 테두리 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_error" />
        </shape>
    </item>
</layer-list>

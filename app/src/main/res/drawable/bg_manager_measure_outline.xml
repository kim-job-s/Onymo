<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_shadow_light" /> <!-- colors.xml에 정의된 그림자 색상 -->
        </shape>
    </item>

    <!-- 배경 및 테두리 -->
    <item>
        <shape>
            <!-- 배경 색상 -->
            <solid android:color="@color/color_surface" /> <!-- 배경 색상: 표면 배경 -->

            <!-- 테두리 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_divider_subtle" /> <!-- 테두리 색상: 부드러운 구분선 -->

            <!-- 둥근 모서리 -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>

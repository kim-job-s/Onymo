<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_shadow_light" /> <!-- 투명한 그림자 효과 -->
        </shape>
    </item>

    <!-- 테두리 및 배경 -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <!-- 배경 색상 -->
            <solid android:color="@color/color_surface" />

            <!-- 테두리 색상 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_divider_subtle" /> <!-- 애플 스타일 연한 회색 -->

            <!-- 둥근 모서리 -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>

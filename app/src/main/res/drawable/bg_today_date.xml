<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 (바깥쪽 부드러운 음영 효과) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- 그림자 투명 -->
            <corners android:radius="12dp" /> <!-- 라운드 모서리 -->
        </shape>
    </item>

    <!-- 배경 -->
    <item>
        <shape>
            <solid android:color="@color/color_surface" /> <!-- 배경색 -->
            <corners android:radius="12dp" /> <!-- 둥근 테두리 -->
        </shape>
    </item>

    <!-- 테두리 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/color_divider" /> <!-- 얇은 테두리 -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>

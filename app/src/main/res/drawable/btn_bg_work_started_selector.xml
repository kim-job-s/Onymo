<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 비활성화 상태 (Disabled State) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 둥근 모서리 설정 -->
            <corners android:radius="12dp" />
            <!-- 비활성화 상태의 배경색 -->
            <solid android:color="@color/color_button_disabled" />
            <!-- 테두리 -->
            <stroke android:width="1dp" android:color="@color/color_button_disabled_text" />
        </shape>
    </item>

    <!-- 눌림 상태 (Pressed State) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 둥근 모서리 설정 -->
            <corners android:radius="12dp" />
            <!-- 눌림 상태의 배경색 -->
            <solid android:color="@color/color_primary_dark" />
            <!-- 테두리 -->
            <stroke android:width="1dp" android:color="#B0B0B0" />
        </shape>
    </item>

    <!-- 활성화 상태 (Enabled State) -->
    <item>
        <shape android:shape="rectangle">
            <!-- 둥근 모서리 설정 -->
            <corners android:radius="12dp" />
            <!-- 기본 배경색 -->
            <solid android:color="@color/color_primary" />
            <!-- 테두리 -->
            <stroke android:width="1dp" android:color="#D1D1D6" />
        </shape>
    </item>

</selector>

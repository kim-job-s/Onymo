<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 바깥쪽 그림자 -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape>
            <gradient
                android:startColor="#33000000"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- 내부 그림자 (가장자리 음영) -->
    <item>
        <shape>
            <gradient
                android:startColor="#F0F0F0"
                android:endColor="#FFFFFF"
                android:angle="90" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- 배경과 테두리 -->
    <item>
        <shape>
            <solid android:color="@color/colorGray" /> <!-- 비활성화된 버튼 배경 -->
            <corners android:radius="50dp" /> <!-- 둥근 모서리 -->
            <stroke
                android:width="1dp"
                android:color="@color/colorGrayDark" /> <!-- 테두리 색 -->
            <padding
                android:left="30dp"
                android:top="8dp"
                android:right="30dp"
                android:bottom="8dp" /> <!-- 내부 패딩 -->
        </shape>
    </item>

</layer-list>

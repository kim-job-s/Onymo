<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorSecondaryLight"> <!-- 초기 Ripple 색상 -->

    <!-- 기본 상태의 배경 -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" /> <!-- 기본 배경색 -->
            <corners android:radius="50dp" /> <!-- 둥근 모서리 (완전한 원) -->
        </shape>
    </item>

    <!-- Ripple 효과 (클릭 시 색상 변화) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryLight" /> <!-- 클릭 시 색상 -->
            <corners android:radius="50dp" /> <!-- 둥근 모서리 (완전한 원) -->
        </shape>
    </item>
</ripple>

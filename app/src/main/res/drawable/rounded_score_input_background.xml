<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <solid android:color="@color/colorSurface" />

    <!-- 테두리 색상과 두께 -->
    <stroke
        android:width="2dp"
        android:color="@color/colorPrimary" />

    <!-- 둥근 모서리 처리 -->
    <corners android:radius="8dp" />

    <!-- 내부 패딩 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>

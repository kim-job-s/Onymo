<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorSecondaryLight"> <!-- Ripple 색상 -->

    <!-- 기본 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" /> <!-- 기본 배경색 -->
        </shape>
    </item>

    <!-- Ripple 효과 -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryLight" /> <!-- Ripple 색상 -->
        </shape>
    </item>
</ripple>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 번호 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/measure_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large_body"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 입력 필드 -->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/measure_input"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="@string/manager_measure_input_hint"
        android:padding="8dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:textSize="@dimen/text_size_large_body"
        android:background="@drawable/rounded_score_input_background"
        app:layout_constraintStart_toEndOf="@id/measure_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

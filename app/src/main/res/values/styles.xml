<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 바텀 네비게이션 클릭 스타일 -->
    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_primary</item> <!-- 활성 상태 배경 색상 -->
        <item name="android:radius">20dp</item> <!-- 둥근 모서리 -->
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 텍스트 스타일 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <!-- 캘린더의 요일에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/color_text_hint</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- 커스텀 버튼 스타일 -->
    <style name="CustomRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="CustomRoundedButton.Disabled">
        <item name="android:background">@color/colorGray</item> <!-- 비활성화 배경 -->
        <item name="android:textColor">@color/text_gray</item> <!-- 비활성화 텍스트 -->
    </style>

    <style name="TextInputErrorStyle">
        <item name="android:textColor">@color/errorTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_error_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- 추가하기 버튼 스타일 -->
    <style name="AddScoreButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_add_button_background</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <!-- 텍스트 색 -->
        <item name="android:textColor">@color/text_white</item>
        <item name="android:elevation">@dimen/elevation_button</item>
    </style>

    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/rounded_score_input_background</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

</resources>

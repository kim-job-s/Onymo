<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 바텀 네비게이션 클릭 스타일 -->
    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_background</item> <!-- 활성 상태 배경 색상 -->
        <item name="android:radius">10dp</item> <!-- 둥근 모서리 -->
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 텍스트 스타일 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <!-- 캘린더의 요일에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/color_text_hint</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
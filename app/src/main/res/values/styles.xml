<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 오늘 날짜 텍스트 스타일 -->
    <style name="TodayDateTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- 출근하기 버튼 스타일 -->
    <style name="StartWorkButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- 바텀 네비게이션 클릭 스타일 -->
    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorSecondary</item> <!-- 활성 상태 배경 색상 -->
        <item name="android:radius">20dp</item> <!-- 둥근 모서리 -->
    </style>

    <!-- 로그인 버튼 스타일 -->
    <style name="LoginButton">
        <!-- 버튼 크기 -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <!-- 버튼 배경 색 -->
        <item name="backgroundTint">@color/loginButtonColor</item>
        <!-- 텍스트 색 -->
        <item name="android:textColor">@color/loginButtonTextColor</item>
        <!-- 텍스트 크기 -->
        <item name="android:textSize">@dimen/login_btn_text_size</item>
        <!-- 텍스트 스타일 -->
        <item name="android:textStyle">bold</item>
        <!-- 둥근 모서리 -->
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 텍스트 스타일 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <!-- 캘린더의 요일에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorNeutralDark</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- 커스텀 버튼 스타일 -->
    <style name="CustomRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="CustomRoundedButton.Disabled">
        <item name="android:background">@color/colorGray</item> <!-- 비활성화 배경 -->
        <item name="android:textColor">@color/text_gray</item> <!-- 비활성화 텍스트 -->
    </style>

</resources>
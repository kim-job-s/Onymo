<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Onymo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color -->

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnBackground">@color/color_on_background</item>

        <!-- Accent Colors -->
        <item name="colorAccent">@color/color_accent</item>

        <!-- Status Bar and Navigation Bar -->
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>

        <!-- Text and Icon -->
        <item name="android:textColor">@color/color_on_surface</item>

        <!-- Tab Colors -->
        <item name="tabIndicatorColor">@color/color_tab_indicator</item>
        <item name="tabSelectedTextColor">@color/color_tab_selected_text</item>

        <!-- Ripple Effect -->
        <item name="colorControlHighlight">@color/color_ripple_light</item>
        <item name="android:selectableItemBackground">@drawable/ripple_default</item>
        <item name="android:selectableItemBackgroundBorderless">@drawable/ripple_default</item>

        <!-- Buttons -->
        <item name="colorButtonNormal">@color/color_button_primary</item>
        <item name="colorControlNormal">@color/color_button_secondary</item>

        <!-- Selectable Background -->
        <item name="selectableItemBackground">@color/color_primary</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.MyApp.BottomNavigation</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.MyApp.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemBackground">@color/color_background</item>
        <item name="itemIconTint">@color/color_bottom_nav_icon_active_light</item>
        <item name="itemTextColor">@color/color_bottom_nav_text_active_light</item>
    </style>

    <style name="Theme.Onymo" parent="Base.Theme.Onymo" />
</resources>
